          Settings
        </a>
      </nav>

      <div class="sidebar-footer">
        <a href="http://localhost:8080/profile/<%= adminId %>" class="nav-item">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          My Profile
        </a>
        <button onclick="logout()" class="nav-item">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          Logout
        </button>
      </div>
    </aside>

    <div class="main-content">
      <header class="header">
        <button id="menuBtn" class="menu-btn">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <h2 class="text-xl font-semibold">Delivery Orders</h2>
      </header>

      <main class="content">
        <div class="flex justify-end mb-6">
          <button onclick="openDialog('createDeliveryDialog')" class="btn btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Delivery
          </button>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="text-lg font-semibold">Delivery Orders</h3>
          </div>
          <div class="card-content">
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Reference</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Delivery Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                   <% for(delivery of deliveries) { %>
                  <tr>
                    <td class="font-medium"><%= delivery.reference %></td>
                    <td><%= delivery.customer %></td>
                    <td><%= delivery.productId.name %></td>
                    <td><%= delivery.productId.quantity %></td>
                    <td><span class="badge badge-primary"><%= delivery.status %></span></td>
                    <td><%= delivery.date %></td>
                    <td><button class="btn btn-ghost btn-sm">View</button></td>
                  </tr>
                <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Create Delivery Dialog -->
  <div id="createDeliveryDialog" class="dialog">
    <div class="dialog-content max-w-2xl">
      <div class="dialog-header">
        <h3 class="text-lg font-semibold">Create Delivery Order</h3>
        <p class="text-sm text-muted-foreground">Ship products to customers</p>
        <button onclick="closeDialog('createDeliveryDialog')" class="dialog-close">Ã—</button>
      </div>
      <form id="createDeliveryForm" class="space-y-4 py-4" method="POST" action="/deliveries/add/<%= adminId %>">
        <!-- Customer -->
      <div class="space-y-2">
        <label for="customer" class="text-sm font-medium">Customer</label>
        <input id="customer" type="text" placeholder="Select or enter customer" class="input" required
               name="delivery[customer]">
      </div>

      <!-- Product -->
      <div class="space-y-2">
        <label for="product" class="text-sm font-medium">Product</label>
        <select id="product" name="delivery[productId]" class="select" required>
          <option value="">Select product</option>
          <% products.forEach(function(product) { %>
            <option value="<%= product._id %>"><%= product.name %></option>
          <% }); %>
        </select>
      </div>

      <!-- Quantity -->
      <div class="space-y-2">
        <label for="quantity" class="text-sm font-medium">Quantity</label>
        <input id="quantity" type="number" placeholder="0" class="input" required
               name="delivery[quantity]">
      </div>

      <!-- Delivery Date -->
      <div class="space-y-2">
        <label for="deliveryDate" class="text-sm font-medium">Delivery Date</label>
        <input id="deliveryDate" type="date" class="input" required
               name="delivery[date]">
      </div>

      <!-- Submit / Cancel -->
      <div class="flex justify-end gap-2 mt-4">
        <button type="button" class="btn btn-outline" onclick="closeDialog('createDeliveryDialog')">Cancel</button>
        <button type="submit" class="btn btn-primary">Create Delivery</button>
      </div>
      </form>
    </div>
  </div>

  <div id="toast-container" class="toast-container"></div>
  <script src="app.js"></script>
  <script>
  // Open dialog
  function openDialog(id) {
    const dialog = document.getElementById(id);
    if (dialog) {
      dialog.style.display = 'block';
      dialog.classList.add('dialog-open'); // optional if you have animations
      // Center the dialog vertically
      dialog.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }

  // Close dialog
  function closeDialog(id) {
    const dialog = document.getElementById(id);
    if (dialog) {
      dialog.style.display = 'none';
      dialog.classList.remove('dialog-open');
    }
  }
    
  </script>
</body>
</html>