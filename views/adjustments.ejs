      <main class="content">
        <div class="flex justify-end mb-6">
          <button onclick="openDialog('createAdjustmentDialog')" class="btn btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Adjustment
          </button>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="text-lg font-semibold">Stock Adjustments</h3>
          </div>
          <div class="card-content">
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Reference</th>
                    <th>Product</th>
                    <th>Type</th>
                    <th>Quantity</th>
                    <th>Reason</th>
                    <!-- <th>Status</th> -->
                    <th>Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(adjustment of adjustments) { %>
                    <tr>
                      <td class="font-medium">
                        <%= adjustment.reference %>
                      </td>
                      <td>
                        <%= adjustment.productId.name %>
                      </td>
                      <td>Remove</td>
                      <td>
                        <%= adjustment.productId.quantity %>
                      </td>
                      <td>
                        <%= adjustment.reason %>
                      </td>
                      <!-- <td><span class="badge badge-success">Done</span></td> -->
                      <td>
                        <%= adjustment.date %>
                      </td>
                      <td><button class="btn btn-ghost btn-sm">View</button></td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
