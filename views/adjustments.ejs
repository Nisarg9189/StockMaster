        <!-- Product -->
        <div class="space-y-2">
          <label for="product" class="text-sm font-medium">Product</label>
          <select name="adjustment[productId]" id="product" class="select" required>
            <option value="">Select product</option>
            <% products.forEach(p=> { %>
              <option value="<%= p._id %>">
                <%= p.name %>
              </option>
              <% }) %>
          </select>
        </div>

        <div class="space-y-2">
          <label for="location" class="text-sm font-medium">Location</label>
          <select name="adjustment[location]" id="location" class="select" required>
            <option value="">Select location</option>
            <option value="warehouse-a">Warehouse A</option>
            <option value="warehouse-b">Warehouse B</option>
          </select>
        </div>

        <div class="space-y-2">
          <label for="countedQuantity" class="text-sm font-medium">Counted Quantity</label>
          <input type="number" name="adjustment[countedQuantity]" id="countedQuantity" placeholder="Enter counted stock"
            class="input" required>
        </div>

        <div class="space-y-2">
          <label for="reason" class="text-sm font-medium">Reason</label>
          <select name="adjustment[reason]" id="reason" class="select" required>
            <option value="">Select reason</option>
            <option value="damaged">Damaged</option>
            <option value="found">Found in storage</option>
            <option value="lost">Lost</option>
            <option value="count-correction">Count correction</option>
          </select>
        </div>

        <div class="flex justify-end gap-2 mt-4">
          <button type="button" class="btn btn-outline" onclick="closeDialog('createAdjustmentDialog')">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Adjustment</button>
        </div>
      </form>
    </div>
  </div>

  <div id="toast-container" class="toast-container"></div>
  <script src="app.js"></script>
  <script>
    function openDialog(id) {
      const dialog = document.getElementById(id);
      if (dialog) {
        dialog.style.display = "flex"; // show it
        dialog.classList.add("open");   // optional: for animations
      }
    }

    function closeDialog(id) {
      const dialog = document.getElementById(id);
      if (dialog) {
        dialog.style.display = "none"; // hide it
        dialog.classList.remove("open");
      }
    }
  </script>
