<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>StockMaster â€” Move History</title>
  <style>
    :root{--bg:#f5f8fb;--glass:rgba(255,255,255,0.8);--card-shadow:0 10px 30px rgba(8,15,30,0.06)}
    *{box-sizing:border-box}
    body{margin:0;font-family:Inter,system-ui,-apple-system,'Segoe UI',Roboto,Arial;background:var(--bg);color:#071326}
    .page{padding:18px}
    .header{display:flex;justify-content:space-between;align-items:center}
    .card{background:var(--glass);padding:12px;border-radius:12px;box-shadow:var(--card-shadow);margin-top:12px}
    table{width:100%;border-collapse:collapse}
    th,td{padding:10px;border-bottom:1px solid rgba(2,6,23,0.06)}
  </style>
</head>
<body>
  <div class="page">
    <div class="header">
      <div>
        <h2 style="margin:0">Move History / Ledger</h2>
        <div style="color:#6b7280">Recent inventory movements (UI-only)</div>
      </div>
      <div style="display:flex;gap:8px">
        <button onclick="openSpec()" style="padding:8px 10px;border-radius:8px;border:0;background:#eef2ff">Open Spec</button>
      </div>
    </div>

    <div class="card">
      <table>
        <thead><tr><th>Time</th><th>Type</th><th>Ref</th><th>Product</th><th>Qty</th><th>From</th><th>To</th></tr></thead>
        <tbody id="ledgerTable"></tbody>
      </table>
    </div>
  </div>

  <script>
    const SPEC_PATH = '/mnt/data/StockMaster.pdf';
    function openSpec(){ window.open(SPEC_PATH,'_blank'); }

    const ledger = [
      {time:new Date().toLocaleString(), type:'Receipt', ref:'REC-001', product:'Steel Rod', qty:10, from:'Supplier', to:'Main'},
      {time:new Date().toLocaleString(), type:'Delivery', ref:'DEL-001', product:'Chair - Oak', qty:2, from:'Main', to:'Customer'}
    ];
    function renderLedger(){
      const tbody = document.getElementById('ledgerTable'); tbody.innerHTML='';
      ledger.forEach(l=>{
        const tr = document.createElement('tr');
        tr.innerHTML = `<td>${l.time}</td><td>${l.type}</td><td>${l.ref}</td><td>${l.product}</td><td>${l.qty}</td><td>${l.from}</td><td>${l.to}</td>`;
        tbody.appendChild(tr);
      });
    }
    renderLedger();
  </script>
</body>
</html>
