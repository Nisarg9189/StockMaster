    <div class="main-content">
      <header class="header">
        <button id="menuBtn" class="menu-btn">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <h2 class="text-xl font-semibold">Products</h2>
      </header>

      <main class="content">
        <div class="flex flex-col sm:flex-row justify-between gap-4 mb-6">
          <div class="relative flex-1 max-w-md">
            <svg class="absolute left-3 top-3 w-4 h-4 text-muted-foreground" fill="none" stroke="currentColor"
              viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" id="searchInput" placeholder="Search products by name or SKU..." class="input pl-10">
          </div>

          <button onclick="openDialog('createProductDialog')" class="btn btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Product
          </button>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="text-lg font-semibold">Products (4)</h3>
          </div>
          <div class="card-content">
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>SKU</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Location</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(product of result) { %>
                    <tr>
                      <td class="font-medium">
                        <%= product.Product %>
                      </td>
                      <td>
                        <%= product.SKU %>
                      </td>
                      <td>
                        <%= product.Category %>
                      </td>
                      <td>
                        <%= product.Stock %>
                      </td>
                      <td><span class="badge badge-success">
                          <%= product.Status %>
                        </span></td>
                      <td>
                        <%= product.Location %>
                      </td>
                      <td>
                        <div class="flex gap-2">
                          <!-- <button class="btn btn-ghost btn-sm" onclick="showToast('Edit product', 'info')">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                          </svg>
                        </button> -->

                          <button class="btn btn-ghost btn-sm edit-product-btn editProductBtn"
                            data-id="<%= product._id %>" onclick="editProduct(this)">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                          </button>
                        </div>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Create Product Dialog -->
  <div id="createProductDialog" class="dialog">
    <div class="dialog-content max-w-md">
      <div class="dialog-header">
        <h3 class="text-lg font-semibold">Create New Product</h3>
        <p class="text-sm text-muted-foreground">Add a new product to your inventory</p>
        <button onclick="closeDialog('createProductDialog')" class="dialog-close">×</button>
      </div>
      <form id="createProductForm" class="space-y-4 py-4" method="post" action="/products/add/<%= adminId %>">
        <div class="space-y-2">
          <label for="productName" class="text-sm font-medium">Product Name *</label>
          <input id="productName" type="text" placeholder="e.g., Steel Rods" class="input" name="stock[name]" required>
        </div>
        <div class="space-y-2">
          <label for="productSku" class="text-sm font-medium">SKU / Code *</label>
          <input id="productSku" name="stock[sku]" type="text" placeholder="e.g., STL-001" class="input" required>
        </div>
        <div class="space-y-2">
          <label for="productCategory" class="text-sm font-medium">Category</label>
          <select id="productCategory" class="select" name="stock[category]">
            <option value="">Select category</option>
            <option value="raw-materials">Raw Materials</option>
            <option value="furniture">Furniture</option>
            <option value="electronics">Electronics</option>
            <option value="consumables">Consumables</option>
          </select>
        </div>
        <div class="space-y-2">
          <label for="productUnit" class="text-sm font-medium">Unit of Measure</label>
          <select id="productUnit" class="select" name="stock[unit]">
            <option value="">Select unit</option>
            <option value="pcs">Pieces (pcs)</option>
            <option value="kg">Kilograms (kg)</option>
            <option value="ltr">Liters (ltr)</option>
            <option value="box">Boxes</option>
          </select>
        </div>
        <div class="space-y-2">
          <label for="initialStock" class="text-sm font-medium">Initial Stock (Optional)</label>
          <input id="initialStock" type="number" placeholder="0" class="input" name="stock[quantity]">
        </div>

        <div class="flex justify-end gap-2 mt-4">
          <button type="button" class="btn btn-outline" onclick="closeDialog('createProductDialog')">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Product</button>
        </div>
      </form>
    </div>
  </div>


  <!-- Edit Product Dialog -->
  <div id="editProductDialog" class="dialog">
    <div class="dialog-content max-w-md">
      <div class="dialog-header">
        <h3 class="text-lg font-semibold">Edit Product</h3>
        <button onclick="closeDialog('editProductDialog')" class="dialog-close">×</button>
      </div>
      <form id="editProductForm" method="POST" action="">
        <!-- Hidden _id field -->
        <input type="hidden" id="editProductId" name="product[_id]">

        <div class="space-y-2">
          <label for="editProductName">Product Name</label>
          <input id="editProductName" name="product[name]" type="text" class="input" required>
        </div>
        <div class="space-y-2">
          <label for="editProductSku">SKU</label>
          <input id="editProductSku" name="product[sku]" type="text" class="input" required>
        </div>
        <div class="space-y-2">
          <label for="editProductCategory">Category</label>
          <input id="editProductCategory" name="product[category]" type="text" class="input">
        </div>
        <div class="space-y-2">
          <label for="editProductUnitPrice">Unit Price</label>
          <input id="editProductUnitPrice" name="product[unitPrice]" type="number" class="input" step="0.01">
        </div>
        <div class="space-y-2">
          <label for="editProductQuantity">Quantity</label>
          <input id="editProductQuantity" name="product[quantity]" type="number" class="input">
        </div>
        <div class="space-y-2">
          <label for="editProductLowStockLimit">Low Stock Limit</label>
          <input id="editProductLowStockLimit" name="product[lowStockLimit]" type="number" class="input">
        </div>
        <div class="flex justify-end gap-2 mt-4">
          <button type="button" class="btn btn-outline" onclick="closeDialog('editProductDialog')">Cancel</button>
          <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
      </form>
    </div>
  </div>


  <div id="toast-container" class="toast-container"></div>
  <!-- <script src="app.js"></script> -->
  <script>
    //loadSidebar('products.html');

    function openDialog(dialogId) {
      const dialog = document.getElementById(dialogId);
      if (dialog) {
        dialog.style.display = "block"; // show dialog
      }
    }

    // Function to close a dialog
    function closeDialog(dialogId) {
      const dialog = document.getElementById(dialogId);
      if (dialog) {
        dialog.style.display = "none"; // hide dialog
      }
    }

    // Add click event to open dialog
    //document.getElementById("addProductBtn").addEventListener("click", function () {
    //openDialog("createProductDialog");
    //});



    async function editProduct(button) {
      // Read data from the clicked button's dataset
      const id = button.dataset.id;
      console.log(id);
      let data = await fetch(`/product/details/${id}`);
      let product = await data.json();
      console.log(product);

      document.getElementById('editProductId').value = product._id;
      document.getElementById('editProductName').value = product.name;
      document.getElementById('editProductSku').value = product.sku;
      document.getElementById('editProductCategory').value = product.category || '';
      document.getElementById('editProductUnitPrice').value = product.unitPrice || 0;
      document.getElementById('editProductQuantity').value = product.quantity || 0;
      document.getElementById('editProductLowStockLimit').value = product.lowStockLimit || 0;
      // Set form action dynamically
      document.getElementById('editProductForm').action = `/products/${product._id}/${product.adminId}?_method=PUT`

      // Open the modal
      document.getElementById('editProductDialog').style.display = 'block';
    }
  </script>
</body>

</html>