          </svg>
          Settings
        </a>
      </nav>

      <div class="sidebar-footer">
        <a href="http://localhost:8080/profile/<%= adminId %>" class="nav-item">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          My Profile
        </a>
        <button onclick="logout()" class="nav-item">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          Logout
        </button>
      </div>
    </aside>

    <div class="main-content">
      <header class="header">
        <button id="menuBtn" class="menu-btn">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <h2 class="text-xl font-semibold">Products</h2>
      </header>

      <main class="content">
        <div class="flex flex-col sm:flex-row justify-between gap-4 mb-6">
          <div class="relative flex-1 max-w-md">
            <svg class="absolute left-3 top-3 w-4 h-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" id="searchInput" placeholder="Search products by name or SKU..." class="input pl-10">
          </div>

          <button onclick="openDialog('createProductDialog')" class="btn btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Product
          </button>
        </div>

        <div class="card">
          <div class="card-header">
            <h3 class="text-lg font-semibold">Products (4)</h3>
          </div>
          <div class="card-content">
            <div class="table-container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>SKU</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Location</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                   <% for(product of result) { %>
                  <tr>
                    <td class="font-medium"><%= product.Product %></td>
                    <td><%= product.SKU %></td>
                    <td><%= product.Category %></td>
                    <td><%= product.Stock %></td>
                    <td><span class="badge badge-success"><%= product.Status %></span></td>
                    <td><%= product.Location %></td>
                    <td>
                      <div class="flex gap-2">
                        <button class="btn btn-ghost btn-sm" onclick="showToast('Edit product', 'info')">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                          </svg>
                        </button>
                        <button class="btn btn-ghost btn-sm text-destructive" onclick="showToast('Delete product', 'info')">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Create Product Dialog -->
  <div id="createProductDialog" class="dialog">
    <div class="dialog-content max-w-md">
      <div class="dialog-header">
        <h3 class="text-lg font-semibold">Create New Product</h3>
        <p class="text-sm text-muted-foreground">Add a new product to your inventory</p>
        <button onclick="closeDialog('createProductDialog')" class="dialog-close">Ã—</button>
      </div>
      <form id="createProductForm" class="space-y-4 py-4" method="post" action="/products/add/<%= adminId %>">
        <div class="space-y-2">
          <label for="productName" class="text-sm font-medium">Product Name *</label>
          <input id="productName" type="text" placeholder="e.g., Steel Rods" class="input" name="stock[name]" required>
        </div>
        <div class="space-y-2">
          <label for="productSku" class="text-sm font-medium">SKU / Code *</label>
          <input id="productSku" name="stock[sku]" type="text" placeholder="e.g., STL-001" class="input" required>
        </div>
        <div class="space-y-2">
          <label for="productCategory" class="text-sm font-medium">Category</label>
          <select id="productCategory" class="select" name="stock[category]">
            <option value="">Select category</option>
            <option value="raw-materials">Raw Materials</option>
            <option value="furniture">Furniture</option>
            <option value="electronics">Electronics</option>
            <option value="consumables">Consumables</option>
          </select>
        </div>
        <div class="space-y-2">
          <label for="productUnit" class="text-sm font-medium">Unit of Measure</label>
          <select id="productUnit" class="select" name="stock[unit]">
            <option value="">Select unit</option>
            <option value="pcs">Pieces (pcs)</option>
            <option value="kg">Kilograms (kg)</option>
            <option value="ltr">Liters (ltr)</option>
            <option value="box">Boxes</option>
          </select>
        </div>
        <div class="space-y-2">
          <label for="initialStock" class="text-sm font-medium">Initial Stock (Optional)</label>
          <input id="initialStock" type="number" placeholder="0" class="input" name="stock[quantity]">
        </div>
      
      <div class="flex justify-end gap-2 mt-4">
        <button type="button" class="btn btn-outline" onclick="closeDialog('createProductDialog')">Cancel</button>
        <button type="submit" class="btn btn-primary">Create Product</button>
      </div>
      </form>
    </div>
  </div>

  <div id="toast-container" class="toast-container"></div>
  <script src="app.js"></script>
  <script>
    //loadSidebar('products.html');
    
      function openDialog(dialogId) {
      const dialog = document.getElementById(dialogId);
      if (dialog) {
          dialog.style.display = "block"; // show dialog
      }
  }

  // Function to close a dialog
  function closeDialog(dialogId) {
      const dialog = document.getElementById(dialogId);
      if (dialog) {
          dialog.style.display = "none"; // hide dialog
      }
  }

  // Add click event to open dialog
  document.getElementById("addProductBtn").addEventListener("click", function() {
      openDialog("createProductDialog");
  });
  </script>
</body>
</html>